{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-14 build active file with NLopt",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lnlopt",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task modified to include NLopt paths."
        }
    ],
    "version": "2.0.0"
}
